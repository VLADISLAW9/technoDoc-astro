---
import { AddProductToCartButton } from "@/components";
import { Lead, Small } from "@/components/ui/typography";
import { ROUTES } from "@/utils/constants";

const product = Astro.props as Product;
---

<li
  class="rounded-3xl p-5 flex flex-col justify-between gap-3 hover:shadow-2xl"
>
  <img
    alt={product.name}
    class="w-full h-48 object-cover"
    src={product.images[0]}
  />
  <Small className="hover:underline">
    <a href={`${ROUTES.PRODUCTS}/${product.id}`}>{product.name}</a>
  </Small>
  <div class="flex items-center justify-between gap-2">
    <Lead>{product.price}</Lead>
    <AddProductToCartButton client:load product={product} />
  </div>
</li>
